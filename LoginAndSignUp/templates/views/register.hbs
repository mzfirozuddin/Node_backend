<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <link rel="stylesheet" href="css/style1.css">
</head>
<body>
    {{>navbar}}
    <main> 
        <div class="body">
            <form action="/register" method="POST">
                <div class="from-box">
                    <div class="input-box">
                        <input type="text" placeholder="Enter your first name" name="firstname">
                    </div>

                    <div class="input-box">
                        <input type="text" placeholder="Enter your last name" name="lastname">
                    </div>

                    <div class="input-box">
                        <input type="email" placeholder="Enter your email" name="email">
                    </div>

                    <div class="input-box">
                        <input type="text" placeholder="Enter your age" name="age">
                    </div>

                    <div class="input-box radio-box">
                        <input type="radio" id="male" name="gender" value="male">
                        <label for="html">Male</label>
                        <input type="radio" id="female" name="gender" value="female">
                        <label for="female">Female</label>
                    </div>

                    <div class="input-box">
                        <input type="text" placeholder="Enter your mobile no" name="phone">
                    </div>

                    <div class="input-box">
                        <input type="password" placeholder="Enter password" name="password">
                    </div>

                    <div class="input-box">
                        <input type="password" placeholder="Confirm password" name="confirmPassword">
                    </div>
                    <div class="submitBtn">
                        {{!-- <button type="submit" value="Register">Register</button> --}}
                        <input type="submit" class="btnRegister" value="Register" onclick="success()"/>
                    </div>

                    <div class="register">
                        <p>Already have an account. <a href="/login">Click Here</a> to login</p>
                    </div>
                </div>
            </form>
        </div>
    </main>

    {{!-- <script>
        function success(){
            alert("You have successfully registered.")
        }
    </script> --}}
</body>

</html>